<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView"
        android:layout_width="480dp"
        android:layout_height="272dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/giphy" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="北科美食通"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!--
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:text="請選擇餐廳:"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_choice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_choice"
        app:layout_constraintVertical_bias="0.555" />
-->

    <Button
        android:id="@+id/btn_sql"
        android:layout_width="275dp"
        android:layout_height="47dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/buttonstyle"
        android:text="點餐紀錄"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn_choice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_choice"
        app:layout_constraintTop_toBottomOf="@+id/btn_res" />

    <Button
        android:id="@+id/btn_res"
        android:layout_width="275dp"
        android:layout_height="47dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/buttonstyle"
        android:text="餐點選擇"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn_choice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_choice"
        app:layout_constraintTop_toBottomOf="@+id/btn_choice" />

    <Button
        android:id="@+id/btn_choice"
        android:layout_width="275dp"
        android:layout_height="47dp"
        android:layout_marginTop="172dp"
        android:background="@drawable/buttonstyle"
        android:text="優惠資訊"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>