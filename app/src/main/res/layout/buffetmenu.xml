<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".buffetmenu">

    <ImageButton
        android:id="@+id/pastamenuimg"
        android:layout_width="400dp"
        android:layout_height="228dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/colorAccent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/c2" />

    <TextView
        android:id="@+id/pastatext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="4dp"
        android:text="主菜"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/pastatext1"
        app:layout_constraintTop_toTopOf="@+id/pastatext1" />

    <RadioGroup
        android:id="@+id/pastaingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/pastatext1"
        app:layout_constraintStart_toStartOf="@+id/pastatext1"
        app:layout_constraintTop_toBottomOf="@+id/pastatext1">

        <RadioButton
            android:id="@+id/pastaselectbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:checked="true"
            android:text="空心菜"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="180dp" />

        <RadioButton
            android:id="@+id/pastaselectbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:checked="false"
            android:text="金針菇"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="148dp" />

        <RadioButton
            android:id="@+id/pastaselectbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:checked="false"
            android:text="高麗菜"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="116dp" />

        <RadioButton
            android:id="@+id/pastaselectbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:checked="false"
            android:text="菠菜"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="84dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/pastatext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:text="蔬菜"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pastamenuimg" />

    <RadioGroup
        android:id="@+id/pastamain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/pastatext2"
        app:layout_constraintStart_toStartOf="@+id/pastatext2"
        app:layout_constraintTop_toBottomOf="@+id/pastatext2">

        <RadioButton
            android:id="@+id/pastamain1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:checked="true"
            android:text="炸雞腿" />

        <RadioButton
            android:id="@+id/pastamain2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:checked="false"
            android:text="魚" />

        <RadioButton
            android:id="@+id/pastamain3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:checked="false"
            android:text="爌肉" />

        <RadioButton
            android:id="@+id/pastamain4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:checked="false"
            android:text="牛肉丸" />


    </RadioGroup>

    <Button
        android:id="@+id/pasta_send"
        android:layout_width="114dp"
        android:layout_height="54dp"
        android:layout_marginTop="164dp"
        android:background="@color/colorPrimary"
        android:text="送出"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pastamain" />

    <TextView
        android:id="@+id/pastaensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="確認餐點"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pastamain" />

    <TextView
        android:id="@+id/pasta_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="28dp"
        android:text="配料:無               醬料: 無              加麵: 無"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/pastaensure"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/pastaensure"
        app:layout_constraintTop_toBottomOf="@+id/pastaensure" />

</androidx.constraintlayout.widget.ConstraintLayout>