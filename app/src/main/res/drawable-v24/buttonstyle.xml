<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 注意：有 state 的 item 要擺在前面 -->
    <item
        android:state_pressed="true"
        >
        <shape>
            <solid
                android:color="#FFDE38" />
            <stroke
                android:width="1dp"
                android:color="	#FFDE38" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#FCE6C9"
                android:centerColor="#FFF8DC"
                android:endColor="#FFFAF0"
                android:angle="270" />
            <stroke
                android:color="#FFDE38" />
            <corners
                android:radius="10dp" />  <!--邊角圓滑程度-->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>